    "react-router-dom": "^6.20.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/express": "^4.17.21",
    "@vitejs/plugin-react": "^4.1.1",
    "compression": "^1.7.4",
    "sass": "^1.69.5",
    "sirv": "^2.0.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  }
}
